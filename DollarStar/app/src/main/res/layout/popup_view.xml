<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shape" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EAE7E8"
        android:orientation="vertical">


        <com.widevision.dollarstar.model.CustomTextView
            android:id="@+id/profile_BTN_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Profile"
            android:textColor="#000000"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#A3A1A1" />


        <com.widevision.dollarstar.model.CustomTextView
            android:id="@+id/share_BTN_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Share"
            android:textColor="#000000"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#A3A1A1" />

        <com.widevision.dollarstar.model.CustomTextView
            android:id="@+id/refresh_BTN_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Refresh friends"
            android:textColor="#000000"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#A3A1A1" />

        <com.widevision.dollarstar.model.CustomTextView
            android:id="@+id/upload_BTN_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Upload"
            android:textColor="#000000"
            android:textSize="17sp"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#A3A1A1" />

        <com.widevision.dollarstar.model.CustomTextView
            android:id="@+id/logout_BTN_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Logout"
            android:textColor="#000000"
            android:textSize="17sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000000" />
    </LinearLayout>


</LinearLayout>